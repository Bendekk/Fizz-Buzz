@page
@model IndexModel
@{
ViewData["Title"] = "Fizz Buzz";
}
<div class="text-center">
    <h1 align="left" class="display-4">Welcome @Model.Name</h1>
    <form align="left" method="post">
        <div class="form-group">
            <label asp-for="Person.FirstName"></label><br/>
            <input class="form-control" asp-for="Person.FirstName" /><br />
            <label asp-for="Person.LastName"></label><br/>
            <input class="form-control" asp-for="Person.LastName" /><br />
            <label asp-for="Person.Years"></label><br/>
            <input class="form-control" asp-for="Person.Years" /><br />
        </div>
        <button class="btn btn-primary" type="submit">Zatwierdź</button>
        <div>
            <span asp-validation-for="Person.FirstName" class="text-danger"></span>
            <span asp-validation-for="Person.LastName" class="text-danger"></span>
            <span asp-validation-for="Person.Years" class="text-danger"></span>
        </div>
        @if (ViewData["Wynik"] !=null)
        {
            <div class="alert alert-success" style="text-align:left"> @ViewData["Wynik"]</div>
        }
    </form>

</div>
    

